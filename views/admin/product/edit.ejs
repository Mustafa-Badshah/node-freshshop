<div class="cotainer-fluid">
    <h1>Update Product</h1>
    <div class="row">
        <div class="col-md-4 offset-md-4">
            <form action="/admin/product/update" method="post">
                <input type="hidden" name="id" value="<%= product._id %>" />
                <div class="form-group">
                    <label>Product Title</label>
                    <input type="text" class="form-control" name="product_title" value="<%= product.product_title %>">
                </div>
                <div class="form-group">
                    <label>Product Price</label>
                    <input type="text" class="form-control" name="product_price" value="<%= product.product_price %>" />
                </div>
                <div class="form-group">
                    <label>Product Detail</label>
                    <input type="text" class="form-control" name="product_details" value="<%= product.product_details %>" />
                </div>
                <div class="form-group">
                    <label>Product Category</label>
                    <select class="form-control" name="product_category">
                        <% catagory.forEach(function(x){%>
                            <% if(product.product_category == x._id){%>
                                <option selected="selected" value="<%= x._id%>"><%= x.category_name%></option>
                            <%}
                            else{%>
                                <option  value="<%= x._id%>"><%= x.category_name%></option>
                            <%}
                        });%>
                           
                        </select>
                </div>
                <div class="form-group">
                    <label>Product Discount</label>
                    <input type="text" class="form-control" name="product_discount" value="<%= product.product_discount %>" />

                </div>
                <input type="submit" value="Update" class="btn btn-success btn-block" />
            </form>
        </div>
    </div>
</div>